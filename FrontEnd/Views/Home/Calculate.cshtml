@model FrontEnd.Models.ResultViewModel

@{
    ViewData["Title"] = "Calculate";
}
    <div>
        <h2 style="margin-left:5%;display:inline-block;">IA Answer</h2>
        <a style="display:inline-block; margin-left:2%" href="@Url.Action("Index", "Home")">Back</a>
    </div>
    <div style="margin-left:5%;">
        <hr style="border: solid 0.5px;" />
        @if (Model.Category == "bad")
        {
            <div style="border-radius:100px; background-color:red;height:25px;width:25px;display:inline-block;margin-bottom:15px"></div>
        }
        else
        {
            <div style="border-radius:100px; background-color:green;height:25px;width:25px;display:inline-block;margin-bottom:15px"></div>
        }

        <dl style="display:inline-block;margin-left:-70px;" class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.FileName)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.FileName)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Accuracy)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Accuracy)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Category)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Category)
            </dd>
            <dt style="width: auto; height: auto; margin-top: 35px; border-radius: 25px; border-color: black;">
                <img src="~/images/@Model.ImgPath" />
            </dt>
        </dl>
    </div>